<div>
  <h1>Show User</h1>

<p><strong>Title: </strong><%= @user.username %></p>
<p><strong>Description: </strong><%= @user.email %></p>
</div>


<div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan= "3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @user.posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td> <%= link_to "Edit Post", edit_post_path(post)  %></td>
      <td> <%= link_to "Show Post", post_path(post) %></td>
      <td> <%= time_ago_in_words(post.created_at) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>