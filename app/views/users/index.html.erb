<h1>Tweeters</h1>

<div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan= "3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td> <%= link_to "Edit user", edit_user_path(user)  %></td>
      <td> <%= link_to "Show user", user_path(user) %></td>
      <td> <%= time_ago_in_words(user.created_at) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>